#!/bin/bash

# Update package list
sudo apt-get update

# Install nginx
sudo apt-get install -y nginx

# Create a basic HTML page with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Configure nginx to listen on port 80
sudo sed -i 's/80 default_server/80/' /etc/nginx/sites-available/default

# Restart nginx
sudo /etc/init.d/nginx restart

# Test the configuration with curl
if curl -s http://localhost | grep -q "Hello World!"; then
    echo "Nginx installed and configured successfully!"
else
    echo "Something went wrong. Check Nginx logs in /var/log/ for more details."
fi
